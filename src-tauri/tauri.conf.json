{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "soulfire",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPCONFIG/profile/*", "$APPCONFIG/profile"]
      },
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "identifier": "com.soulfiremc.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "longDescription": "Advanced Minecraft Server-Stresser Tool. Launch bot attacks on your servers to measure performance.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Advanced Minecraft Server-Stresser Tool.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://gist.githubusercontent.com/AlexProgrammerDE/66024f243a31c7d7d449c54205d37d0c/raw/f86f8fc00215e34e23e10d0b9fb3a8679acec57f/update.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI0QUFBREZCNjZGNjcyMjYKUldRbWN2Wm0rNjJxSkJGM3p1dlJiTkMydnRZTjR2d3JuYnJ5eWNKanZjRnlWc2FKaGoyVmdDNlcK",
      "dialog": true
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 675,
        "resizable": true,
        "width": 1200,
        "center": true
      }
    ]
  }
}
